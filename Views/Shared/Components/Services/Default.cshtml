@model IEnumerable<Service>

<li class="dropdown">
    <a class="nv-link text-dark dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Hizmetlerimiz
    </a>

    <ul class="dropdown-menu">
        @foreach (var item in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Services" asp-action="Details" asp-route-id=@item.Id">
                    @item.Name
                </a>
            </li>
        }
        <li>
            <a class="dropdown-item" asp-controller="Services" asp-action="Index">
                Tüm Hizmetlerimiz
            </a>
        </li>
        <li><a class="dropdown-item" href="#">Action</a></li>
    </ul>
</li>
